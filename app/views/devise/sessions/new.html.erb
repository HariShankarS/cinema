<div class="container-fluid" id="wallpaper">
  <div class="gradient">
  </div>
  <div class="devise">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"labe" %><br />
        <%= f.email_field :email, autofocus: true, class: "transparent-input" %>
      </div><br />

      <div class="field">
        <%= f.label :password, class:"labe" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "transparent-input" %>
      </div><br />

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"labe" %>
        </div><br />
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "transparent-input labe" %>
      </div><br />
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>